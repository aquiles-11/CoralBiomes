      <visualSizeRange>0.5~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
      <allowAutoCut>false</allowAutoCut>
    </plant>
  </ThingDef>

  <ThingDef ParentName="BlueMountainFlowerBase">
    <defName>SkyRim_Plant_BlueMountainFlower</defName>
    <label>Blue Mountain Flower</label>
    <description>Blue Mountain Flower grows in most regions of SkyRIM as do the other mountain flowers, all of which are used in alchemy for different properties.</description>
    <plant>
      <growDays>7</growDays>
      <maxMeshCount>16</maxMeshCount>
      <sowWork>800</sowWork>
      <sowMinSkill>8</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <purpose>Health</purpose>
    </plant>
  </ThingDef>

  <ThingDef ParentName="BlueMountainFlowerBase">
    <defName>SkyRim_Plant_BlueMountainFlowerWild</defName>
    <label>Blue Mountain lower Wild</label>
    <description>Blue Mountain Flower grows in most regions of SkyRIM as do the other mountain flowers, all of which are used in alchemy for different properties.</description>
    <neverMultiSelect>false</neverMultiSelect>
    <plant>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>40</wildClusterWeight>
    </plant>
  </ThingDef>

