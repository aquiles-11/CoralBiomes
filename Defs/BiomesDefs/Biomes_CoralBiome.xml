<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <BiomeDef>
    <defName>CoralBiome</defName>
    <label>CoralBiome</label>
    <description>PLACEHOLDER</description>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <modExtensions>
      <li Class="RegrowthCore.BiomesKitControl">
        <allowOnLand>True</allowOnLand>
        <spawnOnBiomes>
          <li>
            <li>Desert</li>
          </li>
          <li>
            <li>TemperateForest</li>
          </li>
        </spawnOnBiomes>
        <minElevation>0</minElevation>
        <maxElevation>100</maxElevation>
        <frequency>100</frequency>
      </li>
      <li Class="VFECore.BiomeExtension" MayRequire= "OskarPotocki.VanillaFactionsExpanded.Core">
        <uniqueRockTypes>
          <li>CoralStone</li>
        </uniqueRockTypes>        <!-- These types of rock will be removed from every other biome -->
        <forceRockTypes>
          <li>CoralStone</li>
        </forceRockTypes>        <!-- These types of rock will always spawn in this biome -->
        <disallowRockTypes>
          <li>Slate</li>
        </disallowRockTypes>        <!-- These types of rock will never spawn in this biome -->
        <onlyAllowForcedRockTypes>false</onlyAllowForcedRockTypes>        <!-- If true (the default), only the forced will ever spawn in this biome -->
        <forceUniqueRockTypes>true</forceUniqueRockTypes>        <!-- If true (the default), then the unique rocks will also be forced -->
      </li>
    </modExtensions>
    <animalDensity>4</animalDensity>
    <plantDensity>0.75</plantDensity>
    <settlementSelectionWeight>0.9</settlementSelectionWeight>
    <movementDifficulty>1</movementDifficulty>
    <texture>World/Biomes/CoralBiomePPHHYY</texture>
    <forageability>0.75</forageability>
    <foragedFood>RawBerries</foragedFood>
    <wildPlantRegrowDays>20</wildPlantRegrowDays>
    <soundsAmbient>
      <li>Ambient_NightInsects_Standard</li>
    </soundsAmbient>
    <diseaseMtbDays>60</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>50</commonality>
      </li>

      <li>
        <diseaseInc>Disease_AnimalFlu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalPlague</diseaseInc>
        <commonality>100</commonality>
      </li>
    </diseases>
    <terrainsByFertility>
      <li>
        <terrain>fertileCoralSand</terrain>
        <min>-999</min>
        <max>0.87</max>
      </li>
      <li>
        <terrain>RichCoralSand</terrain>
        <min>0.87</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.015</perlinFrequency>
        <thresholds>
          <li>
            <terrain>CoralSand</terrain>
            <min>0.0</min>
            <max>0.76</max>
          </li>
          <li>
            <terrain>ShoreCoralSand</terrain>
            <min>0.68</min>
            <max>0.80</max>
          </li>
          <li>
            <terrain>WaterShallow</terrain>
            <min>0.76</min>
            <max>0.98</max>
          </li>
          <li>
            <terrain>WaterDeep</terrain>
            <min>0.98</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <Clear>18</Clear>
      <Fog>1</Fog>
      <Rain>2</Rain>
      <DryThunderstorm>1</DryThunderstorm>
      <RainyThunderstorm>1</RainyThunderstorm>
      <FoggyRain>1</FoggyRain>
      <SnowGentle>1</SnowGentle>
      <SnowHard>1</SnowHard>
    </baseWeatherCommonalities>
    <wildPlants>
      <pphhyy_CoralBiome_Plant_CoralGrass>7</pphhyy_CoralBiome_Plant_CoralGrass>
      <pphhyy_CoralBiome_Plant_CoralTallGrass>5</pphhyy_CoralBiome_Plant_CoralTallGrass>
      <pphhyy_CoralBiome_Plant_CoralAnemoneTree>5.0</pphhyy_CoralBiome_Plant_CoralAnemoneTree>
      <pphhyy_CoralBiome_Plant_MushroomCoralTree>1</pphhyy_CoralBiome_Plant_MushroomCoralTree>
      <pphhyy_CoralBiome_Plant_CoralNobilisTree>1</pphhyy_CoralBiome_Plant_CoralNobilisTree>
      <pphhyy_CoralBiome_Plant_CoralBush>0.6</pphhyy_CoralBiome_Plant_CoralBush>
      <Plant_BulbTubers>0.5</Plant_BulbTubers>
      <Plant_Tubers>0.6</Plant_Tubers>
      <Plant_LumenRice>0.8</Plant_LumenRice>
      <Plant_CoralHealroot>0.16</Plant_CoralHealroot>
      <pphhyy_CoralBiome_Plant_CoralTubastraea>1.0</pphhyy_CoralBiome_Plant_CoralTubastraea>
      <pphhyy_CoralBiome_Plant_WildCoral>2.0</pphhyy_CoralBiome_Plant_WildCoral>
    </wildPlants>
    <wildAnimals>
      <pphhyy_SeaHorse>0.50</pphhyy_SeaHorse>
      <pphhyy_SeaTurtle>0.30</pphhyy_SeaTurtle>
      <pphhyy_Starfish>0.40</pphhyy_Starfish>
      <pphhyy_GiantIsopod>0.20</pphhyy_GiantIsopod>
      <pphhyy_CoralCrab>0.40</pphhyy_CoralCrab>
      <pphhyy_CoralJellyfish>0.30</pphhyy_CoralJellyfish>
      <pphhyy_HorseShoeCrab>0.35</pphhyy_HorseShoeCrab>
    </wildAnimals>
    <allowedPackAnimals>
      <li>Muffalo</li>
      <li>Alpaca</li>
    </allowedPackAnimals>
  </BiomeDef>


</Defs>
